GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWSTASHSTATE=1
GIT_PS1_SHOWUNTRACKEDFILES=1
# Explicitly unset color (default anyhow). Use 1 to set it.
GIT_PS1_SHOWCOLORHINTS=
GIT_PS1_DESCRIBE_STYLE="branch"
GIT_PS1_SHOWUPSTREAM="auto git"

get_sha() {
    git rev-parse --short HEAD 2>/dev/null
}

D='\e[37;40m'
PINK='\e[35;40m'
GREEN='\e[32;40m'
ORANGE='\e[33;40m'

RED='\e[0;31m'

#PROMPT_COMMAND='\n${PINK}\u ${D}at ${ORANGE}\h ${D}in ${GREEN}\w$(hg_ps1)\ ${D}\n$ '
#export PS1='__git_ps1 \n${PINK}\u ${D}at ${ORANGE}\h ${D}in ${GREEN}\w $ '
PROMPT_COMMAND='__git_ps1 "\[$(tput setaf 2)\]\u \[$(tput setaf 7)\]in \[$(tput setaf 6)\]\w " "\[$(tput sgr0)\]\\\$ " "\[$(tput setaf 3)\]{%s $(get_sha)}"'
